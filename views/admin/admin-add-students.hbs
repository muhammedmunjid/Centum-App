<div class="admin-add-students-container">
    <div class="header mb-4">
        <h2 class="fw-bold">Add New Student</h2>
        <p class="text-muted">Enter student details below</p>
    </div>

    <form class="student-form" method="POST" action="/admin/add-students">
        <!-- Last Name Input -->
        <div class="mb-4">
            <label for="lastName" class="form-label">Last Name</label>
            <input type="text" class="form-control" id="lastName" name="LastName"
                placeholder="Enter student's last name" required>
            <div class="form-text">Please enter the family name/surname</div>
        </div>

        <!-- Class Selection Dropdown -->
        <div class="mb-4">
            <label for="studentClass" class="form-label">Class</label>
            <select class="form-select" id="studentClass" name="studentClass" required>
                <option value="" selected disabled>Select a class</option>
                <option value="E1">E1</option>
                <option value="E2">E2</option>
                <option value="E3">E3</option>
                <option value="E4">E4</option>
                <option value="MB3">MB3</option>
                <option value="M3">M3</option>
                <option value="M4">M4</option>
                <option value="MMB">MMB</option>
            </select>
            <div class="form-text">Select the class this student will join</div>
        </div>

        <!-- Form Actions -->
        <div class="form-actions mt-4">
            <button type="submit" class="btn btn-primary me-2">
                <i class="bi bi-person-plus-fill me-1"></i> Add Student
            </button>
            <button type="reset" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-counterclockwise me-1"></i> Reset
            </button>
        </div>
    </form>
</div>

