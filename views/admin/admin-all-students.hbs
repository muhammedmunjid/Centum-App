<div class="admin-students-container">
  <div class="header mb-4">
    <div class="d-flex justify-content-between align-items-center">
      <div>
        <h2 class="fw-bold">All Students</h2>
        <p class="text-muted">Total Students: {{usersCount.USER}}</p>
      </div>
      <div class="d-flex gap-2">
        <div class="input-group" style="width: 300px;">
          <input type="text" class="form-control" placeholder="Search students...">
          <button class="btn btn-outline-secondary" type="button">
            <i class="bi bi-search"></i>
          </button>
        </div>
      </div>
    </div>
  </div>

  <div class="students-list">
    {{#each studentdetails}}
    <!-- Student Card 1 -->
    <div class="student-card">
      <div class="row g-0">
        <div class="col-md-2 d-flex align-items-center justify-content-center">
          <img src="/profile-images/{{this._id}}.jpg" alt="Profile" class="profile-img rounded-circle">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <div class="row">
              <div class="col-md-4">
                <h5 class="card-title">{{this.FirstName}} {{this.LastName}}</h5>
                <p class="card-text text-muted">{{this.Class}} Class</p>
              </div>
              <div class="col-md-4">
                <p class="card-text">
                  <i class="bi bi-telephone-fill text-primary me-2"></i>
                  +91 {{this.MobileNumber}}
                </p>
                <p class="card-text">
                  <i class="bi bi-envelope-fill text-primary me-2"></i>
                  {{this.Email}}
                </p>
              </div>
              <div class="col-md-4">
                <p class="card-text">
                  <i class="bi bi-geo-alt-fill text-primary me-2"></i>
                  {{this.Place}}
                </p>
                <p class="card-text">
                  <i class="bi bi-calendar-check-fill text-primary me-2"></i>
                  Joined: unknown
                </p>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-2 d-flex align-items-center justify-content-center">
          <div class="btn-group">
            <button class="btn btn-sm btn-outline-primary">
              <i class="bi bi-pencil-fill"></i> Edit
            </button>
            <button class="btn btn-sm btn-outline-danger">
              <i class="bi bi-trash-fill"></i>
            </button>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
    <!-- Add more student cards as needed -->
  </div>

  <!-- Pagination -->
  <nav class="mt-4">
    <ul class="pagination justify-content-center">
      <li class="page-item disabled">
        <a class="page-link" href="#" tabindex="-1">Previous</a>
      </li>
      <li class="page-item active"><a class="page-link" href="#">1</a></li>
      <li class="page-item"><a class="page-link" href="#">2</a></li>
      <li class="page-item"><a class="page-link" href="#">3</a></li>
      <li class="page-item">
        <a class="page-link" href="#">Next</a>
      </li>
    </ul>
  </nav>
</div>

